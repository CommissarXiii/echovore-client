<h3>{{title}}</h3>

<form {{action 'register' on="submit"}}>
  <div class="form-group">
    <label for="registration[username]">Username</label>
    {{ input type="text" class="form-control" id="registration[username]" value=registration.username }}
  </div>
  <div class="form-group">
    <label for="registration[email]">Email</label>
    {{ input type="email" class="form-control" id="registration[email]" value=registration.email }}
  </div>
  <div class="form-group">
    <label for="registration[password]">Password</label>
    {{ input type="password" class="form-control" id="registration[password]" value=registration.password }}
  </div>
  <div class="form-group">
    <label for="password_confirm">Confirm password</label>
    {{ input type="password" class="form-control" id="registration[passwordConfirm]" value=registration.passwordConfirm }}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
